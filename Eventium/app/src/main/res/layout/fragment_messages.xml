<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/event_bg"
    tools:context=".ui.messages.MessagesFragment">

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/event_icon1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/default_margin"
            android:elevation="2dp"
            android:scaleType="fitXY"

            android:src="@drawable/ic_cocktails" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            app:cardBackgroundColor="@android:color/white">


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/event_name1"
                    android:layout_width="215dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/default_margin2"
                    android:layout_marginTop="@dimen/default_margin"
                    android:layout_marginEnd="@dimen/default_margin"
                    android:layout_marginBottom="@dimen/default_margin"
                    android:minHeight="60dp"
                    android:text="SAP Arena"
                    android:textColor="@color/colorAccent"
                    android:textSize="30sp" />


                <TextView
                    android:id="@+id/event_description1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/event_name1"
                    android:layout_marginStart="@dimen/default_margin"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="@dimen/default_margin"
                    android:layout_marginBottom="@dimen/default_margin"
                    android:text="Die SAP Arena hat ein neues Event angelegt. Das Event lautet: Mannheim Adler gegen EisbÃ¤ren Berlin am 25.03.2020"
                    android:textColor="@color/event_text" />

            </RelativeLayout>


        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:paddingTop="150dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/event_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/default_margin"
            android:elevation="2dp"
            android:scaleType="fitXY"

            android:src="@drawable/ic_best_choice" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            app:cardBackgroundColor="@android:color/white">


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/event_name"
                    android:layout_width="215dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/default_margin2"
                    android:layout_marginTop="@dimen/default_margin"
                    android:layout_marginEnd="@dimen/default_margin"
                    android:layout_marginBottom="@dimen/default_margin"
                    android:minHeight="60dp"
                    android:text="Irish Pub"
                    android:textColor="@color/colorAccent"
                    android:textSize="30sp" />


                <TextView
                    android:id="@+id/event_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/event_name"
                    android:layout_marginStart="@dimen/default_margin"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="@dimen/default_margin"
                    android:layout_marginBottom="@dimen/default_margin"
                    android:text="Der Irish Pub hat ein neues Event angelegt. Irischer Abend am 29.03.2020"
                    android:textColor="@color/event_text" />

            </RelativeLayout>


        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>

</FrameLayout>